- @javascript = :defaults
%h1.title= 'Warnings from ' + link_to('data loading', data_files_url)
%table#data_file_warnings
  %thead
    %tr
      %th File
      %th Type
      %th Date
      %th Warning
      %th Saved?
      %th= DataFile.reload_possible? ? 'Reload' : ''
  %tbody
    = render :partial => 'warning', :collection => @data_files[false] if @data_files[false]
    = render :partial => 'warning', :collection => @data_files[true] if @data_files[true]